<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">wexo_shipping_rate_form.wexo_shipping_rate_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Rate Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Wexo\Shipping\Block\Adminhtml\Rate\Edit\BackButton"/>
            <button name="delete" class="Wexo\Shipping\Block\Adminhtml\Rate\Edit\DeleteButton"/>
            <button name="save">
                <label>Save</label>
                <url path="*/*/save">
            </button>
        </buttons>
        <namespace>wexo_shipping_rate_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>wexo_shipping_rate_form.wexo_shipping_rate_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="wexo_shipping_rate_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="wexo_shipping/rate/save"/>
        </settings>
        <dataProvider class="Wexo\Shipping\Model\Rate\DataProvider" name="wexo_shipping_rate_form_data_source">
            <settings>
                <requestFieldName>entity_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general" sortOrder="20">
        <settings>
            <label translate="true">General</label>
        </settings>

        <field name="entity_id" formElement="hidden">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rate</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <dataScope>entity_id</dataScope>
            </settings>
        </field>

        <field name="is_active" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rate</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Rate</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>

        <field name="title" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rate</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Rate Title</label>
                <dataScope>title</dataScope>
            </settings>
        </field>

        <field name="sort_order" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rate</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Sort Order</label>
                <dataScope>sort_order</dataScope>
                <notice translate="true">Sort order in checkout</notice>
            </settings>
        </field>
    </fieldset>

    <fieldset name="carrier" sortOrder="30">
        <settings>
            <label translate="true">Carrier</label>
        </settings>

        <field name="carrier_type" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rate</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Carrier Type</label>
                <dataScope>carrier_type</dataScope>
                <switcherConfig>
                    <rules>
                        <rule name="0">
                            <value>by_percent</value>
                            <actions>
                                <action name="0">
                                    <target>catalog_rule_form.catalog_rule_form.actions.discount_amount</target>
                                    <callback>setValidation</callback>
                                    <params>
                                        <param name="0" xsi:type="string">validate-number-range</param>
                                        <param name="1" xsi:type="string">0.00-100.00</param>
                                    </params>
                                </action>
                            </actions>
                        </rule>
                        <rule name="1">
                            <value>to_percent</value>
                            <actions>
                                <action name="0">
                                    <target>catalog_rule_form.catalog_rule_form.actions.discount_amount</target>
                                    <callback>setValidation</callback>
                                    <params>
                                        <param name="0" xsi:type="string">validate-number-range</param>
                                        <param name="1" xsi:type="string">0.00-100.00</param>
                                    </params>
                                </action>
                            </actions>
                        </rule>
                    </rules>
                    <enabled>true</enabled>
                </switcherConfig>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Wexo\Shipping\Model\Options\Carrier"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="method_type" sortOrder="20" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rate</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Carrier Method</label>
                <dataScope>method_type</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Wexo\Shipping\Model\Options\CarrierMethodType"/>
                        <filterBy>
                            <target>${ $.provider }:${ $.parentScope }.carrier_type</target>
                            <field>carrier</field>
                        </filterBy>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>

    <fieldset name="prices" sortOrder="40">
        <settings>
            <label translate="true">Price Settings</label>
        </settings>

        <field name="price" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rate</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Price</label>
                <dataScope>price</dataScope>
                <notice translate="true">Enter the price of the rate ex. tax</notice>
            </settings>
        </field>

        <field name="allow_free" sortOrder="20" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">rate</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Allow Free</label>
                <dataScope>allow_free</dataScope>
                <notice translate="true">If enabled, the rate is allowed to be free, if a cart rule applies it</notice>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>

    <fieldset name="conditions_fieldset" sortOrder="50">
        <settings>
            <label translate="true">Conditions</label>
        </settings>

        <field name="store_id" sortOrder="10" formElement="multiselect">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Store View</label>
                <dataScope>store_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Wexo\Shipping\Model\Options\Stores"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>

        <container name="conditions_apply_to" sortOrder="20">
            <htmlContent name="html_content">
                <block name="conditions_apply_to" class="Wexo\Shipping\Block\Adminhtml\Rate\Edit\Conditions"/>
            </htmlContent>
        </container>
    </fieldset>
</form>
